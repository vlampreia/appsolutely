{% extends 'layout.html.twig' %}

{% block body %}
<div class="row">
	<div class="col-md-8">
		<h1>Welcome! <small> Super swag login system</small> </h1>
	</div>
</div>

   <form class="form-horizontal"  id="checkout" method="post" action="/checkout">
		
		
		<div class="form-group">
			<label for="" class="col-sm-2 control-label">Website Url</label>
			<div class="col-sm-10">
				<input type="text"  class="form-control" name="url">
			</div>
		</div>

		<div class="form-group">
			<label for="" class="col-sm-2 control-label">First Name</label>
			<div class="col-sm-10">
				<input type="text"  class="form-control" name="first">
			</div>
		</div>

		<div class="form-group">
			<label for="" class="col-sm-2 control-label">Second Name</label>

			<div class="col-sm-10">
				<input type="text"  class="form-control" name="second">
			</div>
		</div>

		<div class="form-group">
			<label for="" class="col-sm-2 control-label">Email</label>

			<div class="col-sm-10">
				<input type="text"  class="form-control" name="email">
			</div>

		</div>

		<div id="dropin"></div>


		<input type="submit" class="btn btn-success" value="Pay $10">
	</form>


<script>
	braintree.setup("{{clientToken}}", 'dropin', {
  container: 'dropin'
});
</script>
{% endblock %}

